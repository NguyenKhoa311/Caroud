# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - PostgreSQL
# For Local Development
DB_ENGINE=django.db.backends.postgresql
DB_NAME=caro_game_db
DB_USER=postgres
DB_PASSWORD=admin
DB_HOST=localhost
DB_PORT=5432

# For AWS RDS PostgreSQL (Production/Staging)
# Uncomment and replace with your RDS details:
# DB_NAME=caroud
# DB_USER=postgres
# DB_PASSWORD=your-rds-master-password
# DB_HOST=caroud-db.xxxxxx.us-east-1.rds.amazonaws.com
# DB_PORT=5432

# AWS Cognito
AWS_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=your-user-pool-id
AWS_COGNITO_APP_CLIENT_ID=your-client-id
AWS_COGNITO_JWKS_URL=https://cognito-idp.us-east-1.amazonaws.com/your-user-pool-id/.well-known/jwks.json

# Redis (for Channels and Caching)
REDIS_URL=redis://localhost:6379

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Game Settings
INITIAL_ELO_RATING=1200
ELO_K_FACTOR=32
MATCHMAKING_ELO_RANGE=100
MOVE_TIME_LIMIT=30

# Environment
ENVIRONMENT=development
